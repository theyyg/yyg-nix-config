! URxvt.keysym.C-9: command:\033]49;#777777\007

!#define background_opacity 0.0

! #include "/home/MAGICLEAP/bwood/opt/base16-xresources/xresources/base16-atelier-estuary.Xresources"
#include "/home/MAGICLEAP/bwood/opt/base16-xresources/xresources/base16-woodland-256.Xresources"
! #include "/home/MAGICLEAP/bwood/opt/base16-xresources/xresources/base16-woodland.Xresources"

! Fake Transparency - copy background to shell
! Shell transparency
!URxvt.transparent: true
!URxvt.shading: 40

! Real Transparency - using compositor
urxvt*depth: 32
urxvt*background: rgba:0000/0000/0000/c800

! ** Font settings ** 
URxvt.font: xft:PragmataProForPowerline:size=11

! ** Scroll bar settings **
! do not scroll with output
URxvt*scrollTtyOutput: false
! scroll in relation to buffer (with mouse scroll or Shift+Page Up)
URxvt*scrollWithBuffer: true
! scroll back to the bottom on keypress
*scrollTtyKeypress: true
! hide the scrollBar
URxvt*scrollBar: false

